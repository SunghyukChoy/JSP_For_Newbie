<?xml version="1.0" encoding="UTF-8"?>
  <web-app>
    <security-role>
      <role-name>role1</role-name>
    </security-role>
    <security-constraint>
      <web-resource-collection>
        <web-resource-name>JSPex</web-resource-name>
        <url-pattern>/10_시큐리티/01_security.jsp</url-pattern>
        <http-method>GET</http-method>
      </web-resource-collection>
      <auth-constraint>
        <description></description>
        <role-name>role1</role-name>
      </auth-constraint>
    </security-constraint>
    <login-config>
      <auth-method>FORM</auth-method>
      <form-login-config>
        <form-login-page>/10_시큐리티/02-1_login.jsp</form-login-page>
        <form-error-page>/10_시큐리티/02-2_login_failed.jsp</form-error-page>
      </form-login-config>
    </login-config>
    <error-page>
      <error-code>500</error-code>
      <location>/11_예외처리/04-2_errorCode_error.jsp</location>
    </error-page>
    <error-page>
      <exception-type>java.lang.Exception</exception-type>
      <location>/11_예외처리/05-2_exceptionType_error.jsp</location>
    </error-page>
    <filter>
      <filter-name>Filter1</filter-name>
      <filter-class>s12.com.filter.AuthenFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>Filter1</filter-name>
      <url-pattern>/12_필터/1-1_filter_process.jsp</url-pattern>
    </filter-mapping>
    <filter>
      <filter-name>Filter2</filter-name>
      <filter-class>s12.com.filter.InitParamFilter</filter-class>
      <init-param>
        <param-name>param1</param-name>
        <param-value>admin</param-value>
      </init-param>
      <init-param>
        <param-name>param2</param-name>
        <param-value>1234</param-value>
      </init-param>
    </filter>
    <filter-mapping>
      <filter-name>Filter2</filter-name>
      <url-pattern>/12_필터/2-1_filter_process.jsp</url-pattern>
    </filter-mapping>
    
    <filter>
    <filter-name>Filter2-1</filter-name>
    <filter-class>s12.com.filter.LogFileFilter</filter-class>
    <init-param>
    <param-name>filename</param-name>
    <param-value>D:\\Logs\\monitor.log</param-value>
    </init-param>
    </filter>
    <filter-mapping>
    <filter-name>Filter2-1</filter-name>
    <url-pattern>/12_필터/2-1_filter_process.jsp</url-pattern>
    </filter-mapping>
  </web-app>